                    Fill="Black">
                    <Path.LayoutTransform>
                        <ScaleTransform ScaleX="0.36" ScaleY="0.36" />
                    </Path.LayoutTransform>
                </Path>
            </Canvas>

            <Canvas x:Key="RegexIcon">
                <Path
                    Canvas.Left="-11"
                    Canvas.Top="-12"
                    Data="M16,16.92C15.67,16.97 15.34,17 15,17C14.66,17 14.33,16.97 14,16.92V13.41L11.5,15.89C11,15.5 10.5,15 10.11,14.5L12.59,12H9.08C9.03,11.67 9,11.34 9,11C9,10.66 9.03,10.33 9.08,10H12.59L10.11,7.5C10.3,7.25 10.5,7 10.76,6.76V6.76C11,6.5 11.25,6.3 11.5,6.11L14,8.59V5.08C14.33,5.03 14.66,5 15,5C15.34,5 15.67,5.03 16,5.08V8.59L18.5,6.11C19,6.5 19.5,7 19.89,7.5L17.41,10H20.92C20.97,10.33 21,10.66 21,11C21,11.34 20.97,11.67 20.92,12H17.41L19.89,14.5C19.7,14.75 19.5,15 19.24,15.24V15.24C19,15.5 18.75,15.7 18.5,15.89L16,13.41V16.92H16V16.92M5,19A2,2 0 0,1 7,17A2,2 0 0,1 9,19A2,2 0 0,1 7,21A2,2 0 0,1 5,19H5Z"
                    Fill="Black">
                    <Path.LayoutTransform>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9" />
                    </Path.LayoutTransform>
                </Path>
            </Canvas>

            <ControlTemplate x:Key="ItemTemplate">
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center" />
            </ControlTemplate>

            <DataTemplate x:Key="ItemContainerTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        Grid.Column="0"
                        VerticalAlignment="Center"/>

                    <Control
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Template="{DynamicResource ItemTemplate}" />
                </Grid>
            </DataTemplate>

            <ItemsPanelTemplate x:Key="ItemsPanelTemplate">
                <StackPanel />
            </ItemsPanelTemplate>
        </ResourceDictionary>

    </Window.Resources>

    <DockPanel Margin="10">

        <!--  Top Panel  -->
        <StackPanel Margin="0,0,0,10" DockPanel.Dock="Top">
            <!--  Search Bar and Filter  -->
            <DockPanel LastChildFill="True">
                <Button
                    Margin="0,0,5,0"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Select All Items">
                    <iconPacks:Unicons Kind="CheckSquare" hc:BackgroundSwitchElement.MouseDownBackground="Red"/>
                </Button>
                
                <Button
                    Margin="0,0,5,0"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Deselect All Items" >
                    <iconPacks:Unicons Kind="SquareFull"/>
                </Button>
                
                <ToggleButton IsChecked="True" 
                              Margin="5,9" 
                              HorizontalAlignment="Center" 
                              Style="{StaticResource ToggleButtonSwitch.Small}" 
                              hc:VisualElement.HighlightBrush="{DynamicResource DangerBrush}"/>
                
                <hc:SearchBar
                    hc:InfoElement.ShowClearButton="True"
                    Style="{StaticResource SearchBarPlus}"
                    Height="25"
                    VerticalContentAlignment="Center" />
            </DockPanel>

            <!--  Sub Group Combobox  -->
            <DockPanel Margin="0,10,0,0" Visibility="Visible">
                <TextBlock
                    Margin="0,3,10,0"
                    DockPanel.Dock="Left"
                    FontSize="14">
                    List Group:
                </TextBlock>
                <ComboBox Height="25" />
            </DockPanel>
        </StackPanel>

        <!--  Bottom Panel  -->
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock
                Height="30"
                Margin="0,5"
                VerticalAlignment="Center"
                DockPanel.Dock="Left">
                <Hyperlink NavigateUri="https://www.dcmvn.com" RequestNavigate="Hyperlink_RequestNavigate">
                    <Image
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="{StaticResource DcmvnLogo}" />
                </Hyperlink>
            </TextBlock>

            <Button
                Width="100"
                HorizontalAlignment="Right"
                Content="Ok" />
        </DockPanel>

        <Grid>
            <ListView
                Grid.Column="0"
                HorizontalContentAlignment="Stretch"
                ItemTemplate="{DynamicResource ItemContainerTemplate}"
                ItemsPanel="{DynamicResource ItemsPanelTemplate}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectionMode="Extended" />
        </Grid>

    </DockPanel>
</Window>
